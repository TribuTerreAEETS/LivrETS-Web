@model LivrETS.Models.SendCodeViewModel
@{
    ViewBag.Title = "Code de vérification";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@ViewBag.Title</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Choisissez un fournisseur d'authentification &Agrave; deux &eacute;tapes:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
