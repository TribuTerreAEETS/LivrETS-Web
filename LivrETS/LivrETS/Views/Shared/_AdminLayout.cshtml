@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @RenderSection("styles", required: false)
}

<div class="container">
    <div class="row" style="padding-top: 10px;">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Administration</h3>
                </div>
                <div class="panel-body text-center" style="padding: 10px;">
                    <div class="btn-group-vertical" role="group" aria-label="administration-buttons">
                        @Html.ActionLink("Gérer les utilisateurs", "ManageUsers", "Admin", new { role = "button", @class = "btn btn-default btn-small" })
                    </div>
                </div>
            </div>

            <div class="panel panel-warning" style="margin-top: 10px;">
                <div class="panel-heading">
                    <h3 class="panel-title">Actions</h3>
                </div>
                <div class="panel-body">
                    @RenderSection("actions", required: false)
                </div>
            </div>
        </div>

        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("scripts", required: false)
}