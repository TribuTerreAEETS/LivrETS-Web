
@{
    ViewBag.Title = "CreateFair";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-datetimepicker.min.css")" />
    <style>
        h1 {
            margin-bottom: 50px;
        }

        #btn-add-activity {
            margin-bottom: 30px;
        }
    </style>
}
<div id="page-wrapper">
    <div class="container">


        <div class="row">
            @using (Html.BeginForm("Create", "Offer", FormMethod.Post, new { @class = "form" }))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Session</label>
                            <select class="form-control input-sm">
                                <option value="A">Automne</option>
                                <option value="H">Hiver</option>
                                <option value="E">Été</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date de début :</label>
                            <div class="input-group date">
                                <input name="start_date" type="text" class="form-control input-sm">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date de fin :</label>
                            <div class="input-group date">
                                <input name="end_date" type="text" class="form-control input-sm">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <h2>Ajouter des activités</h2>
                    <a href="#" class="btn btn-success" id="btn-add-activity">Ajouter une étape</a>
                    <div class="row" id="grp-activity">
                        <div id="add-activity" class="hide">
                            <div class="col-md-1 text-center">
                                <a class="btn btn-danger btn-sm btn-del-activity">
                                    <i class="fa fa-close"></i>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <label>Date de début :</label>
                                <div class="input-group date">
                                    <input name="fair_start_date" type="text" class="form-control input-sm">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Date de fin :</label>
                                <div class="input-group date">
                                    <input name="fair_end_date" type="text" class="form-control input-sm">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label for="exampleInputEmail1">Activité :</label>
                                <select class="form-control">
                                    <option value="">Ceuillete</option>
                                    <option value="">Vente</option>
                                    <option value="">Récuperation</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="exampleInputEmail1">Emplacement :</label>
                                <select class="form-control">
                                    <option value="A">Hall Batiment A</option>
                                    <option value="B">Hall Batiment B</option>
                                    <option value="C">Hall Batiment E</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/moment-fr-ca.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/fair/createFair.js"></script>
}
