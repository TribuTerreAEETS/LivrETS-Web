@using LivrETS.ViewModels
@using LivrETS.Models

@{
    ViewBag.Title = "Ceuillette des articles";
}
@section Styles {
    <style>
        div.row {
            margin-top: 10px;
        }

        .amount-input {
            background-color: white !important;
        }
        div.group-error {
            margin: 10% 0;
            min-height: 200px;
        }

        div.group-error h1 {
            font-size: 70px;
        }
    </style>
}
<div class="content">
    <div class="container">
        @if (Model.Fair == null /*|| Model.Fair.Phase != FairPhase.SALE*/)
        {
            <div class="row">
                <div class="group-error text-center">
                    <div class="col-md-12">
                        <h1 class="primary-color">Désolé!</h1>
                    </div>
                    <div class="col-md-12">
                        <h2>
                            Vous n'&ecirc;tes pas pr&eacute;sentement en
                            p&eacute;riode de <span class="primary-color">vente</span>  =(
                        </h2>
                    </div>
                </div>
            </div>

        }
        else
        {
            <div class="page-header">
                <h1>Ceuillette des articles <small>pour la Foire </small></h1>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="article-livretsid" placeholder="Espace de numérisation" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h4>Articles</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="table-responsive" style="min-height: 450px; border: 1px solid lightgray; border-radius: 3px;">
                        <table id="articles-table" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Vendeur</th>
                                    <th>Prix</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row"><a href="/Fair/Pick" class="btn btn-default">Generer etiquette</a></div>

        }
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/fair/PickValidate.js"></script>
}
