@using LivrETS.ViewModels
@using LivrETS.Models
@model FairViewModel
@{
    ViewBag.Title = "Cueillette";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var progress = Model.CurrentPhase / Model.NumberOfPhases * 100f;
    string inputValue = Model.CurrentPhase == 2 ? "Terminer" : "Suivant >";
}

@if (Model.Fair == null || Model.Fair.Phase != FairPhase.PICKING)
{
    <h2>Vous n'&ecirc;tes présentement pas en phase de cueillette =(</h2>
}
else
{
    <div class="page-header">
        <h1>Cueillir des articles <small>Pour la Foire @(Model.Fair?.StartDate.Year ?? 0)</small></h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100" style="width: @progress%; min-width: 2em;">
                    @progress%
                </div>
            </div>
        </div>
    </div>

    using (Html.BeginForm("Pick", "Fair", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            @switch ((int)(Model.CurrentPhase))
            {
                case 0:
                    <h3>Num&eacute;risez ou entrez manuellement<br />le code &agrave; barres de la<br />carte &eacute;tudiante du vendeur.</h3>
                    <div class="row">
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.UserBarCode, new { @class = "form-control", placeholder = "Ex: FF000000", autofocus = "autofocus" })
                        </div>
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.UserBarCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    break;

                case 1:
                    <div class="row">
                        <div class="col-md-4">
                            <input class="form-control" id="article-code-input" placeholder="Code à barres ou ISBN de l'article" autofocus />
                        </div>
                    </div>
                    <div class="row">
                        <h4>Articles &agrave; vendre par le vendeur</h4>
                    </div>
                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr><th>ID</th></tr><tr><th>Type</th></tr><tr><th>Titre</th></tr><tr><td>ISBN ou Code ou Mod&egrave;le</td></tr><tr><th>Actions</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var offer in Model.Fair.Offers.Intersect(Model.User.Offers))
                                {
                                    <tr>
                                        <td>@offer.Article.LivrETSID</td>
                                    </tr>
                                    <tr>
                                        <td>@offer.Article.TypeName</td>
                                    </tr>
                                    <tr>
                                        <td>@offer.Article.Title</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @switch (offer.Article.ArticleCode)
                                            {
                                                case Article.BOOK_CODE:
                                                    @((offer.Article as Book).ISBN)
                                                    break;
                                                case Article.CALCULATOR_CODE:
                                                    @((offer.Article as Calculator).Model.ToString())
                                                    break;
                                                case Article.COURSE_NOTES_CODE:
                                                    @((offer.Article as CourseNotes).BarCode)
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <button class="btn btn-sm btn-success pick-article-btn" data-livrets-id="@offer.Article.Id" type="button">Cueillir</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <br />
                    <br />

                    <br />
                    <br />
                    <div class="row">
                        <h4>Articles re&ccedil;us pour la Foire</h4>
                    </div>
                    <div class="row">
                        <table id="picked-articles-table" class="table">
                            <thead>
                                <tr><th>ID</th></tr>
                                <tr><th>Type</th></tr>
                                <tr><th>Titre</th></tr>
                                <tr><td>ISBN ou Code ou Mod&egrave;le</td></tr>
                                <tr><th>Actions</th></tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    break;

                case 2:
                    break;
            }
        </div>

        <div class="row">
            <div class="col-md-6">
                <input type="submit" class="btn btn-primary pull-right" value="@inputValue" />
            </div>
        </div>
    }
}
