    @RenderSection("styles", required: false)
</head>
<body>
    <div class="wrapper">
        <div class="header">
            <div class="container">
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="login-btn text-md-center">
                            <a href="/Home/Index">
                                <h1>LivrETS</h1>
                            </a>
                        </div>
                    </div>
                    <!-- END LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <form role="form" class="block-search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Rechercher..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-primary-very-light search-button" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <!-- END SEARCH BAR -->

                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="block-header-links">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div><!--/container-->
        </div>
    </div>

