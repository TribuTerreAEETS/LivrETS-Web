@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Inscrivez-vous";
}

<h2>@ViewData["Title"].</h2>
<h3>Associez votre compte @ViewData["LoginProvider"].</h3>

<form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

    <p class="text-info">
        Vous vous êtes connectez avec succès à <strong>@ViewData["LoginProvider"]</strong>.
        Svp, veuillez confirmer votre inscription en remplissant les champs ci-dessous et cliquez sur le
        bouton <strong>S'inscrire</strong pour continuer.
    </p>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">Courriel</label>
        <div class="col-md-10">
            <input asp-for="Email"
                class="form-control"
                data-val-required="Veuillez indiquer votre courriel."
                data-val-email="Le courriel que vous avez indiqué est invalide."/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <label asp-for="FirstName" class="col-md-2 control-label">Prénom</label>
        <div class="col-md-10">
            <input asp-for="FirstName"
                class="form-control"
                data-val-required="Veuilez indiquer votre prénom.">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        
        <label asp-for="LastName" class="col-md-2 control-label">Nom de famille</label>
        <div class="col-md-10">
            <input asp-for="LastName"
                class="form-control"
                data-val-required="Veuillez indiquer votre nom de famille.">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Confirmer l'inscription</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
